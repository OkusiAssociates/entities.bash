msg.tab.set() {
	if (( $# )); then
		case "${1}" in
			'0'|reset)		_ent_TABSET=0;;
			'++'|forward)	_ent_TABSET=$((_ent_TABSET+1))			;;
			'--'|back)		_ent_TABSET=$((_ent_TABSET-1))			;;
			 *)						if [[ "${1:0:1}" == '+' ]]; then
											_ent_TABSET=$(( _ent_TABSET + ${1:1} ))
										elif [[ "${1:0:1}" == '-' ]]; then
											_ent_TABSET=$(( _ent_TABSET - ${1:1} ))
										else
											_ent_TABSET=$(( ${1} ))						
										fi
									;;
		esac
		(( _ent_TABSET < 0 )) &&	_ent_TABSET=0 # please, curb your enthusiasm.
	else
		echo -n "${_ent_TABSET}"
	fi
	return 0
}
